root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{go,mod,tsv}]
indent_style = tab

[*.md]
indent_size = unset

[*.{cpp,cs,gradle,java,kt,py,rs,ps1}]
indent_size = 4

[*.{cmd,bat}]
end_of_line = crlf

[Makefile]
indent_style = tab

[**/node_modules/**]
ignore = true

[**/.venv/**]
ignore = true

[**/dist/**]
ignore = true

[**/megalinter-reports/**]
ignore = true
